{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Or "nodenext", "bundler"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Or "react", or "preserve" if using Next.js
    "jsx": "preserve", // or "react-jsx"
    "incremental": true,
    "baseUrl": ".", // or "src"
    "paths": { // Optional, but ensure they don't conflict if you have them
      "@/*": ["src/*"] // This makes @/ resolve to your src directory
    },
    // Next.js specific type inclusion (usually handled automatically by `next dev`)
    // but ensure you don't have conflicting typeRoots or types arrays
    // that might exclude Next.js types.
  },
  "include": [
    "next-env.d.ts", // If Next.js project
    "**/*.ts",
    "**/*.tsx" // Ensure .tsx files are included
  ],
  "exclude": ["node_modules"]
}
